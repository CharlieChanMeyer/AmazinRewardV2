{% extends 'baseAdmin.html.twig' %}

{% block title %}アンケート協力謝礼受け取り{% endblock %}

{% block body %}
    <div class="row m-3 p-2 bg-primary text-white justify-content-center text-center">
        <h4> Add an administrator</h4>
        {{ form_start(addAdminForm) }}
            <div class="text-danger">
                {{ form_errors(addAdminForm) }}
            </div>

                <div class="row justify-content-center mb-3">
                    {{ form_widget(addAdminForm.email, {'attr': {'class': 'w-50 text-center'}}) }}<br>
                </div>
                <div class="row justify-content-center text-center" id="some-custom-id">
                    {{ form_row(addAdminForm.submit) }}
                </div>
        {{ form_end(addAdminForm) }}
    </div>
    <div class="row m-3 text-center">
        <table class="table w-75 table-striped border border-dark mx-auto">
            <thead>
                <tr>
                <th scope="col">#</th>
                <th scope="col">Email</th>
                <th scope="col">Remove Admin</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                <tr>
                    <th scope="row">{{ user.id }}</th>
                    <td>{{ user.email }}</td>
                    <td><a class="btn btn-danger" href="{{ path('app_admin_remove_admin', {'id': user.id}) }}" role="button">Remove Admin</a></td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
