<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="container mw-100">
            {% set current_path = app.request.get('_route') %}
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <a class="navbar-brand m-2" href="#">Amazon survey reward | Admin</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link 
                        {% if current_path == 'app_admin_dashboard' %}
                            active
                        {% endif %}" href="
                        {% if current_path == 'app_admin_dashboard' %}
                            #
                        {% else %}
                            {{ path('app_admin_dashboard') }}
                        {% endif %}
                        ">Dashboard</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link 
                        {% if current_path == 'app_admin_events' %}
                            active
                        {% endif %}" href="
                        {% if current_path == 'app_admin_events' %}
                            #
                        {% else %}
                            {{ path('app_admin_events') }}
                        {% endif %}
                        ">Events</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link 
                        {% if current_path == 'app_admin_management' %}
                            active
                        {% endif %}" href="
                        {% if current_path == 'app_admin_management' %}
                            #
                        {% else %}
                            {{ path('app_admin_management') }}
                        {% endif %}
                        ">Admin management</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" 
                        href="{{ path('app_admin_logout') }}">
                            Logout
                        </a>
                    </li>
                    </ul>
                </div>
            </nav>
            {% if message is not null %}
            <div class="mt-2 p-2 bg-primary text-white rounded text-center">
                <h4 class="text-danger">
                    {{ message }}
                </h4>
            </div>
            {% endif %}
            {% block body %}{% endblock %}
        </div>
    </body>
</html>
